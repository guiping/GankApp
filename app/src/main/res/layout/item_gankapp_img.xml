<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin10"
    android:layout_marginBottom="@dimen/margin10"
    android:layout_marginLeft="@dimen/margin5"
    android:layout_marginRight="@dimen/margin5"
    app:contentPaddingLeft="@dimen/padding5"
    app:contentPaddingRight="@dimen/padding5"
    app:contentPaddingBottom="@dimen/padding10"
    app:contentPaddingTop="@dimen/padding10"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFDFDFD"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="4dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@mipmap/ic_github" />
        <TextView
            android:id="@+id/tv_publishedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/padding5"
            android:text="\"
            android:textColor="#00b0ff"
            android:textSize="@dimen/textSize13" />

        <TextView
            android:id="@+id/tv_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/padding10"
            android:text=""
            android:textColor="#e7e9fd"
            android:textSize="@dimen/textSize16" />
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_publishedAt"
            android:ellipsize="end"
            android:lines="1"
            android:padding="@dimen/padding5"
            android:text=""
            android:textColor="#000"
            android:textSize="@dimen/textSize19" />
    </RelativeLayout>


</android.support.v7.widget.CardView>

